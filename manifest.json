{
    "manifest_version": 2,
    "name": "View webpage as TXT",
    "version": "1.0",
    "description": "Firefox Extension to open web pages with w3.org html2txt",
    "permissions": [
        "menus",
        "activeTab"
    ],
    "icons": {
        "16": "logo.png",
        "128": "logo128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "logo.png"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "clove3am@12.34",
            "strict_min_version": "86.0"
        }
    }
}
